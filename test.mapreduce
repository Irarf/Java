import eu.bitwalker.useragentutils.UserAgent;
import laba1.HW1;
import laba1.HW1.HW1Mapper;
import laba1.HW1.HW1Reducer;
import org.apache.hadoop.io.IntWritable;
import org.apache.hadoop.io.LongWritable;
import org.apache.hadoop.io.Text;
import org.apache.hadoop.mrunit.mapreduce.MapDriver;
import org.apache.hadoop.mrunit.mapreduce.MapReduceDriver;
import org.apache.hadoop.mrunit.mapreduce.ReduceDriver;
import org.junit.Before;
import org.junit.Test;

import java.io.IOException;
import java.util.ArrayList;
import java.util.List;


public class MapReduceTest {

    private MapDriver<LongWritable, Text, HW1.HW1Writable, IntWritable> mapDriver;
    private ReduceDriver<HW1.HW1Writable, IntWritable, Text, IntWritable> reduceDriver;
    //private MapReduceDriver<LongWritable, Text, HW1.HW1Writable, IntWritable, Text, IntWritable> mapReduceDriver;

    private final String testIP = "1,10130130103,3";

    private UserAgent userAgent;
    @Before
    public void setUp() {
        HW1Mapper mapper = new HW1Mapper();
        HW1Reducer reducer = new HW1Reducer();
        mapDriver = MapDriver.newMapDriver(mapper);
        reduceDriver = ReduceDriver.newReduceDriver(reducer);
        //mapReduceDriver = MapReduceDriver.newMapReduceDriver(mapper, reducer);
        userAgent = UserAgent.parseUserAgentString(testIP);
    }

    @Test
    public void testMapper() throws IOException {
        mapDriver
                .withInput(new LongWritable(), new Text(testIP))
                .withOutput(new HW1.HW1Writable(new Text("1"),new Text("10130130103"),new IntWritable(3)
                        ), new IntWritable(3))
                .runTest();
    }

    @Test
    public void testReducer() throws IOException {
        List<IntWritable> values = new ArrayList<IntWritable>();
        values.add(new IntWritable(3));
        //values.add(new IntWritable(1));
        reduceDriver
                .withInput(new HW1.HW1Writable(new Text("1"),new Text("10130130103"),new IntWritable(3)), values)
                .withOutput(new Text("1,10130130103"), new IntWritable(3))
                .runTest();
    }
